<?xml version="1.0" encoding="utf-8"?>
<widget id="rapiddata.compacttext.CompactText" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Native"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Compact Text</name>
    <description>A Mendix native widget to display large text in a truncated format with a customizable character limit. Includes a "More" button to expand and view the full content and a "Less" button to collapse it back.</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <property key="Size" type="integer" required="true" defaultValue="100">
                <caption>Size</caption>
                <description>Enter size of the text(Number of texts)</description>
            </property>
            <property key="Text" type="textTemplate" required="true">
                <caption>Text</caption>
                <description>Enter the Text</description>
            </property>
            <property key="BackgroundColor" type="string" required="false">
                <caption>Background Color</caption>
                <description>Select the background color - code</description>
            </property>
            <property key="mC" type="string" required="false">
                <caption>more Color</caption>
                <description>Select the more-button color - code</description>
            </property>
            <property key="FontColor" type="string" required="false">
                <caption>Font Color</caption>
                <description>Select the font color - code</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
